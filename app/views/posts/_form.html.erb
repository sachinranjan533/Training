<%= form_with model: @post do |f| %>
    <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>
    <div>
    <%= f.label :body %>
    <%= f.text_area :body, size: "60x10" %>
    <%= f.file_field :avatar %>
    <%= f.submit %>
    </div>
<% end %>

