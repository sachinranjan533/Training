<div class="container">
  <div>
  <div class="row mt-3">
    <div class="col">
    <h1 class="text-success"><%= "Available Posts" %></h1>
    </div>
    <div class="col-2">
    <%= link_to 'Add New Post', new_post_path, :remote => true, class: 'btn btn-success btn-lg' %>
    </div>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th colspan="3" class="text-center">Id</th>
        <th colspan="3" class="text-center">Title</th>
        <th colspan="3" class="text-center">Body</th>
        <th colspan="3" class="text-center">Created At</th>
        <th colspan="3" class="text-center">Updated At</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <%= render 'check',obj: post %>     
      <% end %>
    </tbody>
  </table>
</div>


<div class="container">
  <h1 class="text-danger"><%= "Deleted Posts" %></h1>
  <table class="table">
    <thead>
      <tr>
        <th colspan="3" class="text-center">Id</th>
        <th colspan="3" class="text-center">Title</th>
        <th colspan="3" class="text-center">Body</th>
        <th colspan="3" class="text-center">Deleted At</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @posts_deleted.each do |post| %>
      <tr>
        <td colspan="3" class="text-center"><%= post.id %></td>
        <td colspan="3" class="text-center"><%= post.title %></td>
        <td colspan="3" class="text-center"><%= post.body %></td>
        <td colspan="3" class="text-center"><%= post.deleted_at.strftime("%d/%m/%Y") %></td>
        <td colspan="3" class="text-center">
        <%= link_to recovery_path(post_id: post.id) do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
        <%= link_to post_path(post,value: "permanent"),method: :delete,data: {confirm: "Are you sure to Delete Post?"} do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div id="modal-new-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>