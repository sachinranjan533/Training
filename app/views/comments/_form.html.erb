<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel">Comment Creation/Updation Form</h4>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<%= form_with(model: @comment,local: false) do |f| %>
<div class="modal-body">
  <div class="mb-3">
    <%= f.label :title,class: "form-label text-primary" %>
    <%= f.text_field :title, class: "form-control",id: "title",placeholder: "Enter Title of Comment" %>
  </div>
  <div class="mb-3">
    <%= f.label :body,class: "form-label text-primary" %>
    <%= f.text_field :body, class: "form-control",id: "body",placeholder: "Enter Body of Comment" %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-lg close_modal" data-bs-dismiss="modal">Close</button>
    <%= f.button :submit, :class => 'btn btn-success btn-lg' %>
  </div>
  <%= f.hidden_field :post_id, value: params[:post_id] %>
</div>
<% end %>